extend type Query {
    allRecipes: [Recipe!]!
    recipe(id: ID!): Recipe
}

extend type Mutation {
    createRecipe(input: CreateRecipeInput!): CreateRecipePayload!
}

type Recipe {
    id: ID!
    name: String!
    instruction: String!
    ingredients: [Ingredient!]!
}

input CreateRecipeInput {
    name: String!
    instruction: String!
}

type CreateRecipePayload {
    recipe: Recipe
}